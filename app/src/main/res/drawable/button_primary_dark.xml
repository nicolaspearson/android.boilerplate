<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_dark"/>
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="@color/color_primary_dark"/>
            <stroke
                android:width="1dp"
                android:color="@color/grey_99"/>
        </shape>
    </item>

</layer-list>